{
  "app-id": "com.leinardi.gst",
  "command": "gst",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--talk-name=org.freedesktop.Flatpak",
    "--filesystem=/sys:ro",
    "--env=PATH=/usr/bin:/bin:/usr/sbin:/sbin:/app/bin:/app/sbin"
  ],
  "cleanup": [
    "*.la",
    "*.a",
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    "lm-sensors.json",
    "libaio.json",
    "libbsd.json",
    "zlib.json",
    "stress-ng.json",
    "python3-setuptools.json",
    "python3-python-dateutil.json",
    "pypi-dependencies.json",
    {
      "name": "gst",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.com/leinardi/gst.git",
          "tag": "0.7.1",
          "commit": "4816fe804a17f2059618548f0f931ef3e551d532"
        }
      ]
    }
  ]
}
